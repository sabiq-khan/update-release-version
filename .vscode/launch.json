    "version": "0.2.0",
    "configurations": [
        {
            "name": "Integration Test: GitHub Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test/integration/test_github_client.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env.local.test"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Integration Test: Update Release Version",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/modules/update_release_version.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env.local"
        }
    ]
}